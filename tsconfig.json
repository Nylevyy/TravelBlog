{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "~/*": ["*"]
    },
    "skipLibCheck": true,
    "baseUrl": "src",
    "strict": true
  },
  "include": [
    "src",
    "@types"
  ],
  "exclude": [
    "node_modules"
  ],
}